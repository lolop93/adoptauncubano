{% extends '/mi_cuenta/index.html.twig' %}

{% block title %}Ajustes de cuenta - Adopta un Cubano{% endblock %}

{% block body %}
    {{ parent() }}
    {{ dump() }}

{% endblock %}

{% block texto %}
    <h2>Ajustes</h2>
{% endblock %}

{% block primerIcono %}
    bi-gear-fill
{% endblock%}

{% block segundoIcono %}
    bi-person-fill
{% endblock%}


{% block contenido %}
    <div class="gridAjustes" >
        <div class="editarCampos">
            <h3>Nombre</h3>
            <p>{{ login.nombre }}</p>
        </div>

        <div class="editarCampos">
            <h3>Apellidos</h3>
            <p class="campoEditable">{{ login.apellido1 }}</p>
        </div>

        <div class="editarCampos">
            <h3>Correo electr√≥nico</h3>
            <p>{{ login.email }}</p>
        </div>




    </div>



    <style>

        .gridAjustes h3,p{
            display: grid;
            grid-auto-rows: minmax(1,auto);
            padding: 10px 0 0 30px;

        }
        .gridAjustes h3{
            color: #CE5353;
            font-weight: bold;
        }
        .editarCampos{
            border-bottom: solid 0px;
            box-shadow: -2px 2px 6px -3px rgb(0 0 0 / 31%);
            padding: 20px 0;
        }


    </style>
{% endblock %}