{% extends '/mi_cuenta/index.html.twig' %}


{% block body %}
    {{ parent() }}

    {{ dump() }}
    <style>
        .gridContenido{
            display: grid;
            grid-template-columns: 1fr 1fr 1fr 1fr;
            grid-auto-rows: minmax(min-content,auto);
            background-color: #E1E1E1;

        }

        .fotoGrid{
            grid-row: 1/4;

        }

        .info{
            color: #CE5353;



        }
        .info h1{
            font-weight: bolder;
            font-size: 15px;

        }
         .editarPerfil{
             display: flex;
             grid-column: 3/5;
             background-color: #CE5353;
             color: white;
             align-items: center;
         }

         .imagenUsuario{
             width:150px;
             height: 150px;
             background-position: center;
             background-size: cover;
             border-radius: 10px;
         }
         .atributos{
             font-size: 10px;
         }

    </style>

{% endblock %}

{% block contenido %}
    <div class="gridContenido">
        <div class="fotoGrid mt-4">
            {% if login.galeria and login.galeria.getFotoPerfil %}
                <div class="imagenUsuario  m-2 " style="background-image: url({{ asset('images/Perfiles/' ~ login.galeria.getFotoPerfil) }});"></div>
            {% else %}
                <p>Sin foto de perfil</p>
            {% endif %}
        </div>

        <div class="info">
            <h1 class="m-2 mt-4">
                {% if login and login.nombre %}
                    {{ login.nombre }}
                {% else %}
                    Marta
                {% endif %}
            </h1>
            <p class="m-2" >España</p>
            <p class="m-2" >26 años</p>
        </div>
        <div class="editarPerfil"><p >Editar perfil</p></div>
        <p class="atributos m-2">OJOS</p>
        <p class="atributos m-2">PELO</p>
        <p class="atributos m-2">PROFESION</p>
        <p class="atributos m-2">CIUDAD</p>
        <p class="atributos m-2">GUSTOS</p>
    </div>
{% endblock %}

{% block texto %}
    <p>Perfil</p>
{% endblock %}