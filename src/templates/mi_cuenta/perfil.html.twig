{% extends '/mi_cuenta/index.html.twig' %}


{% block body %}
    {{ parent() }}

    {{ dump() }}
    <style>
        .gridContenido{
            display: grid;
            grid-template-columns: 1fr 1fr 1fr 1fr;
            grid-auto-rows: minmax(min-content,auto);
            background-color: #E1E1E1;

        }

        .fotoGrid{
            grid-row: 1/4;

        }

        .info{



        }
        .info h1{
            font-weight: bolder;
            font-size: 80px;
        }
         .editarPerfil{
            grid-column: 3/5;
         }

         .imagenUsuario{
             width:300px;
             height: 300px;
             background-position: center;
             background-size: cover;
             border-radius: 10px;
         }

    </style>

{% endblock %}

{% block contenido %}
    <div class="gridContenido">
        <div class="fotoGrid">
            {% if login.galeria and login.galeria.getFotoPerfil %}
                <div class="imagenUsuario mx-auto m-4 " style="background-image: url({{ asset('images/Perfiles/' ~ login.galeria.getFotoPerfil) }});"></div>
            {% else %}
                <p>Sin foto de perfil</p>
            {% endif %}
        </div>

        <div class="info text-danger">
            <h1 class="m-4">
                {% if login.atributos and login.atributos.nombre %}
                    {{ login.atributos.nombre }}
                {% else %}
                    Marta
                {% endif %}
            </h1>
            <p class="m-4" >España</p>
            <p class="m-4" >26 años</p>
        </div>
        <p class="editarPerfil bg-danger">Editar perfil</p>
        <p class="atributos m-4"  >OJOS</p>
        <p class="atributos m-4">PELO</p>
        <p class="atributos m-4">PROFESION</p>
        <p class="atributos m-4">CIUDAD</p>
        <p class="atributos m-4">GUSTOS</p>
    </div>
{% endblock %}

{% block texto %}
    <p>Perfil</p>
{% endblock %}