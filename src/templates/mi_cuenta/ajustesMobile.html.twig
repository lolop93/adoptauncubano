{% extends 'baseMobile.html.twig' %}

{% block title %} Ajustes perfil - Adopta un Cubano{% endblock %}
{% block body %}
    {{ dump() }}
    <div class="cuerpo" >
        <div class="encabezado">
            <h1>Ajustes</h1>
        </div>
        <div class="editarCampos">
            <h3>Nombre</h3>
            <p>{{ login.nombre }}</p>
        </div>

        <div class="editarCampos">
            <h3>Apellidos</h3>
            <p class="campoEditable">{{ login.apellido1 }}</p>
        </div>

        <div class="editarCampos">
            <h3>Correo electrónico</h3>
            <p>{{ login.email }}</p>
        </div>

        <div class="editarCampos contraseña" style="display: none">
            <h3>Contraseña</h3>
            <p>{{ login.password }}</p>
        </div>


    </div>



    <style>
        .cuerpo{
            width: 100%;
            height: 100%;
            background-color: whitesmoke;
        }

        .encabezado{
            width: 100%;
            height: 75px;
            background-color: #CE5353;
            display: flex;
            align-items: center;
            padding-left: 20px;
            box-shadow: -2px 4px 6px -1px rgb(0 0 0 / 60%);

        }
        .encabezado h1{

            color: white;
            font-size: 36px;
            font-weight: bold;
        }
        .cuerpo h3,p{
            padding:0 0 0 30px;

        }
        .cuerpo h3{
            color: #CE5353;
            font-weight: bold;
            padding-top: 10px;
        }
        .editarCampos{
            border-bottom: solid 0px;
            box-shadow: -2px 2px 6px -3px rgb(0 0 0 / 31%);
        }
        .editarCampos p{
            font-size: 18px;
            width: 100%;
        }

    </style>
{% endblock %}