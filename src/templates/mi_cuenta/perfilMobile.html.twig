{% extends '/mi_cuenta/index.html.twig' %}


{% block body %}
    {{ parent() }}

    {{ dump() }}
    <style>
        .gridContenido{
            display: grid;
            grid-template-columns: 1fr 1fr 1fr 1fr;
            grid-auto-rows: minmax(min-content,auto);
            background-color: #E1E1E1;

        }

        .fotoGrid{
            grid-row: 1/4;

        }

        .info{
            color: #CE5353;
        }
        .info h1{
            font-weight: bolder;


        }
         .editarPerfil{
             display: flex;
             grid-column: 3/5;
             background-color: #E1E1E1;
             color: white;
             align-items: center;
             justify-content: flex-end;


         }

         .editarPerfil p{
             background-color: #CE5353;
             border-top-left-radius: 360px;
             border-bottom-left-radius: 360px;
         }

         .imagenUsuario{
             width:150px;
             height: 150px;
             background-position: center;
             background-size: cover;
             border-radius: 10px;
         }

         .descripcion{
             grid-column: 1/5;
         }

        .galeria{
            grid-column: 1/5;
            justify-self: start;
         }
        .galeria p{
            background-color: #CE5353;
            border-top-right-radius: 360px;
            border-bottom-right-radius: 360px;
        }

    </style>

{% endblock %}

{% block contenido %}
    <p>Pollaaaaaaaaaa</p>
{% endblock %}

{% block texto %}
    <p class="title">Perfil</p>
{% endblock %}