{% extends 'base.html.twig' %}

{% block title %}Login - Adopta un Cubano{% endblock %}

{% block header %}
{% endblock %}
{% block subheader %}
{% endblock %}
{% block body %}

<div class="video-container">
    <video autoplay muted loop>
        <source src="{{ asset('videos/fondoIndex1.mp4') }}" type="video/mp4" />
    </video>
        {{ parent() }}
        <div class="cuerpo">
            <div class="logo"></div>
            <div class="contenedor">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <label class="tituloCampo" for="inputUsername">Usuario</label>
                    <input class="campo" type="text" value="{{ last_username }}" name="username" id="inputUsername" autocomplete="username">
                    <label class="tituloCampo" for="inputPassword">Contrase√±a</label>
                    <input class="campo"type="password" name="password" id="inputPassword"  autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <button class="botonLogin" type="submit">
                        Entrar
                    </button>
                </form>
            </div>
        </div>
</div>
    <style>
        input:-webkit-autofill,
        input:-webkit-autofill:focus {
            transition: background-color 600000s 0s, color 600000s 0s;
        }
        body{
            background-image: none;
            background-color: black;
        }
        .video-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
            width: 100%;
            position: relative;
            background-color:  rgba(0 0 0 / 60%);
        }

        .video-container video {
            width: 100%;
            height: 100%;
            position: absolute;
            object-fit: cover;
            z-index: -2;
            filter: blur(3px);
        }
        .cuerpo{
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
            height: 100%;
            padding-top: 75px;
        }
        .logo{
            background-image: url("{{ asset('images/Logos/LogoHeader.png') }}");
            background-size: cover;
            width: 35em;
            height: 9.65em;
            margin-bottom: 75px;
        }
        .contenedor{
            display: flex;
            align-items: center;
            justify-content: center;
            width: 14em;
            height: 19em;
            border-radius: 10px;
            padding: 25px 55px;
        }
        form{
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        form>.campo{
            margin-bottom: 20px;
        }
        form>.tituloCampo{
            margin-bottom: 10px;
            color: #CE5353;
            font-weight: bolder;
            font-size: 28px;
        }
        .campo{
            border-radius: 100px;
            font-family: Metropolis;
            border:none;
            background-color: white !important;
            width: 200px;
            box-shadow: 1px 8px 8px -5px rgb(0 0 0 / 31%);
            padding-left: 20px;
        }
        .botonLogin {
            background-color: #CE5353;
            border: none;
            color: whitesmoke;
            width: 125px;
            height: 45px;
            margin-top: 15px;
            border-radius: 100px;
            box-shadow:inset 0px -9px 8px 0px rgb(0 0 0 / 31%), 1px 8px 8px -5px rgb(0 0 0 / 31%);
        }
        .botonLogin:hover{
            background-color: #A74343;
        }
        header{
            padding: 0!important;
        }




    </style>
{% endblock %}
