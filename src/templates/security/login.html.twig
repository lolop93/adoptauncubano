{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block header %}
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="cuerpo">
        <div class="logo"></div>
        <div class="contenedor">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <label class="tituloCampo" for="inputUsername">Usuario</label>
                <input class="campo" type="text" value="{{ last_username }}" name="username" id="inputUsername" autocomplete="username">
                <label class="tituloCampo" for="inputPassword">Contrase√±a</label>
                <input class="campo"type="password" name="password" id="inputPassword"  autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="botonLogin" type="submit">
                    Entrar
                </button>
            </form>
        </div>
    </div>
    <style>
        input:-webkit-autofill,
        input:-webkit-autofill:focus {
            transition: background-color 600000s 0s, color 600000s 0s;
        }
        .cuerpo{
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
            height: 100%;
            padding-top: 75px;
        }
        .logo{
            background-image: url("{{ asset('images/Logos/LogoHeader.png') }}");
            background-size: cover;
            width: 35em;
            height: 9.65em;
            margin-bottom: 75px;
        }
        .contenedor{
            background-color: #E1E1E1;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 30em;
            height: 24em;
            border-radius: 10px;
            padding: 25px 55px;
        }
        form{
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        form>.campo{
            margin-bottom: 20px;
        }
        form>.tituloCampo{
            margin-bottom: 10px;
            color: #CE5353;
            font-weight: bolder;
            font-size: 28px;
        }
        .campo{
            border-radius: 100px;
            font-family: Metropolis;
            border:none;
            background-color: white !important;
            width: 400px;
            height:45px;
            box-shadow: 1px 8px 8px -5px rgb(0 0 0 / 31%);
            padding-left: 20px;
        }
        .botonLogin {
            background-color: #CE5353;
            border: none;
            color: whitesmoke;
            width: 125px;
            height: 45px;
            margin-top: 15px;
            border-radius: 100px;
            box-shadow: 1px 8px 8px -5px rgb(0 0 0 / 31%);
        }




    </style>
{% endblock %}
