<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {# 'app' must match the first argument to addEntry() in webpack.config.js #}
            {{ encore_entry_link_tags('app') }}

            <!-- Renders a link tag (if your module requires any CSS)
                 <link rel="stylesheet" href="/build/app.css"> -->
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}

            <!-- Renders app.js & a webpack runtime.js file
                <script src="/build/runtime.js" defer></script>
                <script src="/build/app.js" defer></script>
                See note below about the "defer" attribute -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

        {% endblock %}
    </head>



    <body>
        <header class="p-2 text-white " style="background-color:rgba(0, 0, 0, 0.8);">
            {% block header %}
                <div class="container-fluid d-flex flex-row align-items-center">

                    <a href="{{ path('homepage') }}"><img class=" img me-2" style="max-width: 10em" src="{{ asset('images/Logos/LogoHeader.png') }}" ></a>

                    <i onclick="window.location.href = '{{ path('mensajes') }}'" class="bi bi-chat-fill ms-auto " style="font-size: 20px; color: white; padding: 0 5px;"></i>
                    <i class="bi bi-bell-fill me-2 ms-2" style="font-size: 20px; padding: 0 5px; margin: 0 20px;"></i>

                    <input id="buscador" type="text" class="buscador-header ps-2 me-2" placeholder="&#61442;" aria-label="Search" style="border: none; border-radius: 2.25rem; width: 300px; margin: 0 20px">

                    <div class=" perfilHeader d-flex flex-row p-1 align-items-center " style="background-color: #CE5353FF; margin: 0 20px;">

                        <div class="contenedorMenu">
                            <p class="p-2 tituloMenu">Perfil</p>
                            <div class="menuDesplegable d-none d-flex flex-column align-items-center ">
                                <a href="{{ path('ajustes') }}" class="botonMenuPerfil"><i class="bi bi-gear"></i></a>

                                <a href="{{ path('perfil') }}" class="botonMenuPerfil"><i class="bi bi-person"></i></a>

                                <a href="{{ path('app_logout') }}" class="botonMenuPerfil"><i class="bi bi-box-arrow-left"></i></a>

                            </div>
                        </div>
                        {# Script menu desplegable en app.js #}
                        <div  alt="mdo" width="50" height="50" class="rounded-circle" style="z-index:100;background-image: url('{{ asset('images/Perfiles/' ~ login.galeria.getFotoPerfil)}}'); margin-left: auto; background-size: cover;position: center;  width:40px;height:40px;"></div>


                    </div>

                </div>
            {% endblock %}
        </header>
        <div class="pt-3 pb-3 main-content"  >
            {% block body %}
                <style>
                    @import "//netdna.bootstrapcdn.com/font-awesome/3.0/css/font-awesome.css"; {# placeholder de la importación del icono de la barra de busqueda#}
                    body{

                        background-size: 500px 500px;
                        background-repeat: repeat;
                        background-image: url({{ asset('images/Backgrounds/pattern_1.0.png') }});
                    }

                </style>

            {% endblock %}
        </div>
        <footer>
            {% block footer %}
                <div class="footer">
                    <div class="logoFooter" >
                        <img class="img-fluid"  style=" max-width: 10em" src="{{ asset('images/Logos/Logofooter.png') }}" >
                    </div>

                    <div class="iconosFooter">
                        <i class="bi bi-twitter"></i>
                        <i class="bi bi-instagram"></i>
                        <i class="bi bi-facebook"></i>
                    </div>

                    <div class="infoFooter">
                        <li class="infoFooterNonBorder"><a href="localhost/contacto">CONTACTO</a></li>
                        <li><a href="localhost/contacto">CONDICIONES Y PRIVACIDAD</a></li>
                        <li style="color: white">©Copyright 2021</li>
                    </div>


                </div>

                <style>

                    footer{
                        /* Like the header, the footer will have a static height - it shouldn't grow or shrink.  /
                        / 0 flex-grow, 0 flex-shrink, auto flex-basis */
                        flex: 0 0 auto;
                    }
                    .footer{
                        padding: 12px;
                        background-color:rgba(0, 0, 0, 0.6);
                        display: flex;
                        align-items: center;
                        justify-content: space-around;
                    }
                    footer .logoFooter{
                        display: flex;
                        justify-content: center;
                        margin-bottom: 10px;
                    }
                    footer .logoFooter img{
                        max-width: 10em;
                    }
                    footer .iconosFooter{
                        display: flex;
                        color: white;
                        justify-content: center;
                    }
                    footer .iconosFooter i{
                        margin-left: 40px;
                        font-size: 2em;
                    }
                    footer a,li{
                        text-decoration: none;
                        color: white;
                        font-size: 12px;
                        list-style: none;
                    }
                    footer .infoFooter{
                        display: flex;
                        justify-content: center;
                    }
                    footer .infoFooter li{
                        border-left: 1px solid #ffffff;
                        margin-left: 20px;
                        padding-left: 20px;
                    }
                    footer .infoFooterNonBorder{
                        border-left: none !important;
                        margin-left: 0 !important;
                    }
                    html{
                        height: 100%;
                    }

                    body{
                        display: flex;
                        flex-direction: column;
                        height: 100%;
                    }
                    header{
                        /* We want the header to have a static height,
                        it will always take up just as much space as it needs.  */
                        /* 0 flex-grow, 0 flex-shrink, auto flex-basis */
                        flex: 0 0 auto;
                        position: sticky;
                        z-index: 1000;
                        top: 0;
                    }
                    input{
                        font-family: Metropolis, FontAwesome;
                    }
                    input:focus{
                        outline: none;
                    }

                    header i:hover{
                        background-color: #CE5353FF;
                        cursor: pointer;
                        border-radius: 360px;
                    }

                    .perfilHeader p{
                        margin: 0;

                    }
                    .bi-box-arrow-left::before {
                        margin-right: 3.5px;
                    }
                    .tituloMenu{
                        font-size: 13.4px;
                    }
                    .botonMenuPerfil{
                        color: inherit;
                        margin-bottom: 5px;
                    }

                    .perfilHeader{
                        border-radius: 360px;
                    }
                    .perfilHeader div{
                        cursor: pointer;
                    }
                    .menuDesplegable p{
                        font-size: 10px;
                        border-radius: 100px;
                    }
                    .contenedorMenu{
                        border-radius: 100px
                    }

                    .main-content{
                        /* By setting flex-grow to 1, the main content will take up
                        all of the remaining space on the page.
                        The other elements have flex-grow: 0 and won't contest the free space. */
                        /* 1 flex-grow, 0 flex-shrink, auto flex-basis */
                        flex: 1 0 auto;
                    }

                    footer{
                        /* Like the header, the footer will have a static height - it shouldn't grow or shrink.  */
                        /* 0 flex-grow, 0 flex-shrink, auto flex-basis */
                        flex: 0 0 auto;
                    }


                </style>
            {% endblock %}


        </footer>
    </body>


</html>