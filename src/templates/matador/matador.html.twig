{% extends 'base.html.twig' %}
{% block title %}Matador de la Semana - Adopta un Cubano{% endblock %}
{% block body %}
    {{ parent() }}
    {{ dump() }}



    <div class="todo" style="display: flex;flex-direction: column; padding: 0 10rem">
        <h1 style="font-weight: 500; color: white">Matadores de la semana</h1>
        <div class="cuerpo-matador">
            <div class="contenedor-matador">

                <div class="">
                    <a class="wrapper-foto" href="{{ path('perfiles',{id:matador.id}) }}" >
                        <div class="foto"style="background-image: url('{{ asset('images/perfiles/' ~ matador.getGaleria.getFotoPerfil ~ '') }}');"></div>
                    </a>
                    <h1 style="font-size:52px; font-weight: 600; text-align: center; color: #CE5353">{{ matador.nombre }}</h1>
                </div>
                <div class="">
                    <a class="wrapper-foto " href="{{ path('perfiles',{id:matadora.id}) }}">
                        <div class="foto"style="background-image: url('{{ asset('images/perfiles/' ~ matadora.getGaleria.getFotoPerfil ~ '') }}');"></div>
                    </a>
                    <h1 style="font-size:52px; font-weight: 600; text-align: center; color: #CE5353">{{ matadora.nombre }}</h1>
                </div>

            </div>
        </div>
    </div>

    <style>
        .cuerpo-matador{
            width: 100%;
            height: 90%;
            display: flex;
            align-content: center;
            justify-content: center;
        }
        .foto{
            background-position: center;
            background-size: cover;
            width: 350px ;
            height: 400px;
            border-radius: 10px;
            box-shadow: 8px 8px 20px 0px rgb(0 0 0 / 50%);
            margin-bottom: 30px;
            transition: transform .2s;
        }
        .foto:hover{
            cursor: pointer;
            transform: scale(1.1);
        }
        .contenedor-matador{
            display: flex;
            justify-content: space-around;
            width: 100%;
            height: 100%;
            padding: 10rem;
            background: whitesmoke;
            border-radius: 10px;
        }
    </style>

{% endblock %}

