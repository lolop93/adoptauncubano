{% extends 'base.html.twig' %}
{% block body %}
    {{ parent() }}
    {{ dump() }}


    <div class="cuerpo-matador">
        <div class="contenedor-matador">

            <div class="">
                <a class="wrapper-foto " href="{{ path('perfiles',{id:matador.id}) }}">
                    <div class="foto "
                             style="background-image: url('{{ asset('images/perfiles/' ~ matador.getGaleria.getFotoPerfil ~ '') }}');"></div>
                </a>
            </div>
                <div class=""><a class="wrapper-foto " href="{{ path('perfiles',{id:matadora.id}) }}"><div class="foto "
                             style="background-image: url('{{ asset('images/perfiles/' ~ matadora.getGaleria.getFotoPerfil ~ '') }}');"></div>
                </a>
            </div>

        </div>
    </div>

    <style>
        .cuerpo-matador{
            width: 100%;
            height: 90%;
            display: flex;
            align-content: center;
            justify-content: center;
            padding: 5rem 0;
        }
        .foto{
            background-position: center;
            background-size: cover;
            width: 350px ;
            height: 400px;
            border-radius: 10px;
        }
        .foto:hover{
            cursor: pointer;
            width: 375px;
            height: 425px;
        }
        .contenedor-matador{
            display: flex;
            justify-content: space-around;
            width: 90%;
            height: 100%;
            padding: 10rem;
            background: whitesmoke;
            border-radius: 10px;
        }
    </style>

{% endblock %}

