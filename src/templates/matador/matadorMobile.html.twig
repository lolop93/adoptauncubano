{% extends 'baseMobile.html.twig' %}
{% block title %}Matador de la Semana - Adopta un Cubano{% endblock %}
{% block body %}
    {{ parent() }}



    <div class="todo" style="display: flex;flex-direction: column;">
        <div class="cuerpo-matador">
            <div class="contenedor-matador">
                <div style="box-shadow: 8px 8px 20px 0px rgb(0 0 0 / 50%);;background-color:#CE5353; height: 5rem; margin-top: -4rem; width: 100%; display: flex; align-items: center; justify-content: center; margin-bottom: 5rem"><h1 style="font-weight: 600; color: white;">Matadores de la semana</h1></div>

                <div class="matador" style="margin-bottom: 40px">
                    <a class="wrapper-foto" href="{{ path('perfiles',{id:matador.id}) }}" >
                        <div class="foto"style="background-image: url('{{ asset('images/perfiles/' ~ matador.getGaleria.getFotoPerfil ~ '') }}');"></div>
                    </a>
                    <h1 style="font-size:52px; font-weight: 600; text-align: center; color: #CE5353">{{ matador.nombre }}</h1>
                </div>
                <div class="">
                    <a class="wrapper-foto " href="{{ path('perfiles',{id:matadora.id}) }}">
                        <div class="foto"style="background-image: url('{{ asset('images/perfiles/' ~ matadora.getGaleria.getFotoPerfil ~ '') }}');"></div>
                    </a>
                    <h1 style="font-size:52px; font-weight: 600; text-align: center; color: #CE5353">{{ matadora.nombre }}</h1>
                </div>

            </div>
        </div>
    </div>

    <style>
        .main-content{
            margin-top: 0.8rem!important;
        }
        .cuerpo-matador{
            width: 100%;
            height: 100%;
            display: flex;
            align-content: center;
            justify-content: center;
        }
        .foto{
            background-position: center;
            background-size: cover;
            width: 200px ;
            height: 250px;
            border-radius: 10px;
            box-shadow: 8px 8px 20px 0px rgb(0 0 0 / 50%);
            margin-bottom: 10px;
            transition: transform .2s;
        }
        .foto:hover{
            cursor: pointer;
            transform: scale(1.1);
        }
        .contenedor-matador{
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
            height: 100%;
            background: whitesmoke;
            padding: 4rem 0;
        }
    </style>

{% endblock %}