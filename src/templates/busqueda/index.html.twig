    {% extends 'base.html.twig' %}

{% block title %}BÃºsqueda - Adopta un Cubano{% endblock %}

{% block body %}
{{ parent() }}
{{ dump() }}

    <div class="mx-auto card gridBusqueda ">
    {% for resultado in resultados %}

        <div class="fila bg-white">
            <a class="wrapper-foto" href="{{ path('perfiles',{id:resultado.id}) }}"><div class="foto" style="background-image: url('{{ asset('images/perfiles/' ~ resultado.foto_perfil ~ '') }}');"></div></a>
            <div class="cabecera">
                <div class="res_nombre"><p>{{ resultado.nombre ? resultado.nombre : 'Sin nombre' }}</p></div>
                <div class="res_edad"><p>{{ resultado.fecha_nac ? date().diff(date(resultado.fecha_nac)).y : 'Sin Edad' }}</p></div>
                <div class="res_nacionalidad"><p>{{ resultado.nacionalidad ? resultado.nacionalidad|country_name : "Sin nacionalidad" }}</p></div>
            </div>
            <div class="res_ojos">
                <h6 >OJOS</h6>
                <p>{{ resultado.ojos ? resultado.ojos : "Sin color de ojos" }}</p></div>
            <div class="res_pelo">
                <h6 >PELO</h6>
                <p>{{ resultado.color_pelo ? resultado.color_pelo : "Sin color de pelo"}}</p></div>
            <div class="res_profesion">
                <h6 >PROFESION</h6>
                <p>{{ resultado.profesion ? resultado.profesion : "Sin profesion definidad"}}</p></div>
            <div class="res_ciudad">
                <h6 >CIUDAD</h6>
                <p>{{ resultado.ciudad ? resultado.ciudad : "Sin ciudad definida" }}</p></div>
            <div class="res_altura">
                <h6 >ALTURA</h6>
                <p>{{ resultado.altura ? resultado.altura : "Sin altura" }}</p></div>
            <div class="res_peso">
                <h6 >PESO</h6>
                <p>{{ resultado.peso ? resultado.peso : "Sin peso" }}</p></div>
            <div class="res_gustos">
                <h6 >GUSTOS</h6>
                <p>{{ resultado.gustos ? resultado.gustos|join(', ') : "Gustos no definidos" }}</p></div>
            <div class="res_visita">Visitar</div>
            <div class="res_descripcion">
                <h6 >DESCRIPCION</h6>
                <p>Descripcion</p></div>

        </div>

    {% endfor %}

        <div class=" bg-white d-flex m-2">
            {%  if previous >= 0 %}
                <a class="mx-auto" href="{{  path('busqueda',{ busqueda: query, offset: previous  }) }}"> Anteriores </a>
            {%  endif %}
            {%  if next < resultados|length %}
                <a class="mx-auto" href="{{  path('busqueda',{ busqueda: query, offset: next  }) }}"> Siguiente </a>
            {%  endif %}
        </div>
    </div>



    <style>

        h6{
            margin: 0;
        }
        .gridBusqueda{
            width: 80%;
            display: grid;
            row-gap: 30px;
            padding: 20px;
            background-color: #E1E1E1;
        }

        .fila{
            width: 100%;
            display: grid;
            grid-template-areas:
                "foto cabecera cabecera cabecera"
                "foto ojos pelo profesion "
                "foto ciudad altura peso "
                "foto gustos gustos gustos "
                "visita descripcion descripcion descripcion ";
            grid-template-rows: minmax(min-content,50px) ;
            grid-template-columns: 150px auto auto auto;
        }

        .wrapper-foto{
            grid-row: 1/4;
        }
        .foto{
            background-position: center;
            background-size: cover;
            width: 150px ;
            height: 200px;
        }

        .res_gustos{
            grid-column: 2/5;
        }
        .res_descripcion{
            grid-column: 2/5;
        }
        .cabecera{
            grid-column: 2/5;
            background-color: #CE5353;
            display: grid;
            grid-template-areas:
                    "nombre edad"
                    "nombre nacionalidad";
            grid-template-rows: 30px 30px;
            color: white;
        }
        .res_nombre{
            grid-row: 1/3;
        }

        .res_nombre p{
            font-size: 20px;
        }
        .res_edad{
            justify-self: end;
            align-self: end;
        }
        .res_nacionalidad{
            justify-self: end;
            align-self: end;
        }
        div[class^='res_']{ /*Todos los div con class res_ en aldelante*/
            padding: 10px 5px 5px 10px;
        }


    </style>

{% endblock %}
