{% extends 'baseMobile.html.twig' %}

{% block title %}Búsqueda - Adopta un Cubano{% endblock %}

{% block body %}

    <div class="cuerpo">

        <div class="textoResultado">
            <h1>"Busqueda realizada"</h1>
            <p>_n resultados encontrados</p>
        </div>
        {% for resultado in resultados %}
            <div class="tarjeta">
                <div class="fotoBusqueda" style="background-image: url('{{ asset('images/perfiles/' ~ resultado.foto_perfil ~ '') }}');">

                    <a class="visitaPerfil" style="text-decoration: none" href="{{ path('perfiles',{id:resultado.id}) }}">
                        <i class="bi bi-eye-fill"></i>
                    </a>

                        <div class="infoFoto">


                            <div class="textoFoto">
                                <h1>{{ resultado.nombre ? resultado.nombre : 'Sin nombre' }} {{ resultado.fecha_nac ? date().diff(date(resultado.fecha_nac)).y : 'Sin Edad' }}</h1>
                                <h4>{{ resultado.nacionalidad ? resultado.nacionalidad|country_name : "Sin nacionalidad" }}</h4>
                            </div>

                            <i class="bi-suit-heart-fill"></i>

                        </div>

                    </div>
                    <i class="bi bi-eye-fill"></i>






                <div class="descripcion">
                    <h2 id="titulo">Descripción</h2>
                    <p id="cuerpoDescripción">{{  resultado.descripcion ? resultado.descripcion : "Sin descripcion" }}</p>
                </div>

                <div class="atributos">

                    <div class="columna">
                        <div class="fila">
                            <h2>Ojos</h2>
                            <p>{{ resultado.ojos ? resultado.ojos : "Sin color de ojos" }}</p>
                        </div>

                        <div class="fila">
                            <h2>Ciudad</h2>
                            <p>{{ resultado.ciudad ? resultado.ciudad : "Sin ciudad definida" }}</p>
                        </div>
                    </div>

                    <div class="columna">
                        <div class="fila">
                            <h2>Pelo</h2>
                            <p>{{ resultado.color_pelo ? resultado.color_pelo : "Sin color de pelo"}}</p>
                        </div>
                    </div>

                    <div class="columna">
                        <div class="fila">
                            <h2>Profesión</h2>
                            <p>{{ resultado.profesion ? resultado.profesion : "Sin profesion definidad"}}</p>
                        </div>

                        <div class="fila">
                            <h2>Altura (cm)</h2>
                            <p>{{ resultado.altura ? resultado.altura : "Sin altura" }}</p>
                        </div>

                        <div class="fila">
                            <h2>Gustos</h2>
                            <p>Por detrás</p>
                        </div>
                    </div>

                </div>

            </div>
        {% endfor %}




    </div>

    <style>
        .cuerpo{
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 15px;
        }
        .textoResultado{
            color: whitesmoke;
            text-align: left;
        }
        .textoResultado h1{
            font-size: 24px;
        }
        .textoResultado p{
            font-size: 12px;
        }
        .tarjeta{
            width: 300px;
            height: 650px;
            background-color: #E1E1E1;
            margin-top: 20px;
        }
        .fotoBusqueda{
            position: relative;
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            width: 100%;
            height: 60%;
            background-size: cover;
            background-position: center;
            color: whitesmoke;
        }
        .visitaPerfil{
            position: absolute;
            top: 5px;
            right: 5px;
        }
        .bi-eye-fill{
            position: absolute;
            top: 10px;
            right: 15px;
            color: whitesmoke;
            font-size: 36px;

        }
        .infoFoto{
            position: relative;
            display: flex;
            padding: 10px 10px 10px 15px;
            background-color: rgba(0, 0, 0, 0.45);
            color: #CE5353;
        }
        .infoFoto .textoFoto *{
            margin-bottom: 0px;
            color: whitesmoke;
        }
        .infoFoto .bi-suit-heart-fill{
            position: absolute;
            right: 30px;
            font-size: 48px;
        }

        .descripcion{
            box-shadow: -2px 4px 8px -5px rgb(0 0 0 / 31%);
            padding: 17px;
        }
        .descripcion #titulo{
            font-size: 24px;
            font-weight: bolder;
            color: #CE5353;
        }
        .descripcion #cuerpoDescripción{
            font-size: 12px;
        }
        .atributos{
            display: flex;
            justify-content: space-between;
            margin: 17px;
        }
        .columna{
            display: flex;
            flex-direction: column;
            text-align: center;
        }
        .fila{
            text-align: left;
        }
        .fila h2{
            font-size: 16px;
            font-weight: bold;
            color: #CE5353;
            margin-bottom: 2px;
        }
        .fila p{
            font-size: 12px;
            margin-bottom: 15px;

        }


    </style>
{% endblock %}