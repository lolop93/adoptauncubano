{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block header %}
{% endblock %}

{% block body %}
    {{ parent() }}

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="cuerpo">
        <div class="logo"></div>
        <div class="d-flex flex-column contenedorForm align-items-center mt-5 ">


            {{ form_start(registrationForm) }}
            <div class="align-self-start ps-2 pe-2 registro">Registro</div>
            {{ form_row(registrationForm.username, { label: 'Nombre de usuario' }) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Contrase√±a'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit" class="boton">Siguiente</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>

    <style>
        .cuerpo{
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
            height: 100%;
            padding-top: 45px;
        }
        .logo{
            background-image: url("{{ asset('images/Logos/LogoHeader.png') }}");
            background-size: cover;
            width: 35em;
            height: 9.65em;
            margin-bottom: 20px;
        }
        .contenedorForm form{
            display: flex;
            flex-direction: column;
            align-items: center;
            color: #CE5353;
            background-color:#E1E1E1 ;
            border-radius: 0.5rem !important;
            width: 20em;
            height: 25em;
            max-width: 500px;
            min-width: 260px;
            position: relative;
            padding-top: 110px;
        }

        .contenedorForm form div{
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 150px;
            height: 50px;
            border-radius: 0 100px 100px 0 ;

        }
        .registro{
            margin-top: 15px;
            background-color: #CE5353;
            color: white;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            width: 75px;
            height: 25px;
            font-size: 24px;
            font-weight: bolder;
            position: absolute;
            left: -10px;
            top: 0px;
            box-shadow: 1px 8px 8px -5px rgb(0 0 0 / 31%);
        }



        .contenedorForm button{
            align-self: flex-end;
            background-color: #CE5353;
            color: white;
            margin-top: 20px;
            margin-bottom: 20px;
            border: none;
            border-radius: 100px  0 0  100px ;
            font-size: 14px;
            font-weight: bolder;
            width: 120px;
            height: 35px;
            position: absolute;
            right: -10px;
            bottom: 0;
            box-shadow: 1px 8px 8px -5px rgb(0 0 0 / 31%);


        }

        .contenedorForm h1{
            background-color: #CE5353;
            color: white;
            margin-top: 20px;
        }


    </style>


{% endblock %}
