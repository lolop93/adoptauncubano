{% extends 'base.mobile.html.twig' %}

{% block title %}Registro{% endblock %}

{% block header %}
    <div class="contenedor">
        <a href="/" class="d-flex align-items-center p-2 mb-lg-0 text-white text-decoration-none">
            <img class=" img " style="margin-left: 0; max-width: 10em" src="{{ asset('images/Logos/LogoHeader.png') }}" >
        </a>

        <div class="subHeader">
            <a href="#" class="nav-link px-2 text-white linkHeader">Información</a>
            <a href="#" class="nav-link px-2 text-white linkHeader">Ayuda</a>
        </div>
    </div>


    <style>
        .contenedor{
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .contenedor .linkHeader{
            font-size: 12px;
        }
        .contenedor img{
        }
        body{
        }

    </style>
{% endblock %}

{% block body %}
    <div class="video-container">
        <video autoplay muted loop>
            <source src="{{ asset('videos/fondoIndex1.mp4') }}" type="video/mp4" />
        </video>
        <div class="contenedorForm">


            {{ form_start(registrationForm) }}
            <div class="registro">Registro</div>
            {{ form_row(registrationForm.username, { label: 'Nombre de usuario' }) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Contraseña'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit" class="boton">Siguiente</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
    <style>

        .contenedor2{
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center !important;
            align-items: center;
        }
        .subHeader{
            display: flex;
        }

        .boton{
            padding: 5px 15px;
            border-radius: 200px !important;
            outline: none;
            border: none;
            background-color: #e86362;
            color: white;
            box-shadow:inset -2px 2px 6px -3px rgb(0 0 0 / 31%);
            margin-bottom: 25px;
        }
        .video-container {
            height: 100%;
            width: 100%;
            position: relative;
            background-color:  rgba(0 0 0 / 40%);
        }

        .video-container video {
            width: 100%;
            height: 100%;
            position: absolute;
            object-fit: cover;
            z-index: -2;
            filter: blur(3px);
        }

        input:-webkit-autofill, input:-webkit-autofill:focus {
            transition: background-color 600000s 0s, color 600000s 0s;
        }
        .registro{
            font-size: 48px;
            font-weight: bolder;
            margin-bottom: 15px;
        }
        .contenedorForm{
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 100%;
        }
        .contenedorForm form{
            display: flex;
            flex-direction: column;
            align-items: center;
            color: whitesmoke;
            border-radius: 0.5rem !important;
            width: 20em;
            height: 25em;
            max-width: 500px;
            min-width: 260px;
            position: relative;
            padding-top: 110px;
        }

        .contenedorForm form div{
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 150px;
            height: 50px;
            border-radius: 0 100px 100px 0 ;

        }
        .contenedorForm button{
            background-color: #CE5353;
            color: white;
            border: none;
            border-radius: 100px  0 0  100px ;
            font-size: 14px;
            font-weight: bolder;
            width: 120px;
            height: 35px;
            box-shadow: 1px 8px 8px -5px rgb(0 0 0 / 31%);


        }
        input{
            margin-bottom: 10px;
            border-radius: 100px;
            font-family: Metropolis;
            border:none;
            background-color: white !important;
            box-shadow: 1px 8px 8px -5px rgb(0 0 0 / 31%);
            padding-left: 20px;
            outline: none;
        }

        .contenedorForm h1{
            background-color: #CE5353;
            color: white;
            margin-top: 20px;

        }




    </style>

{% endblock %}
