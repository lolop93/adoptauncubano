{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}



{% block body %}
    {{ parent() }}
    
    <div class="container">
        <div class="card">
            <img src="{{ asset('images/imagenes_random/bannerCoche.PNG') }}">
        </div>
    </div>

    <div class="container mt-5">
        <div id="carouselExampleFade" class="carousel slide carousel-fade " data-bs-ride="carousel">
            <div class="carousel-inner mx-auto" style="width: 80%">
                <div class="carousel-item active">
                    <div class="container gridUsers p-4 align-items-center justify-content-center bg-white " style="border-radius: 10px; " >
                        {% if users|length > 0 %}
                            {% for atributo in atributos|slice(0, 6) %}
                                <article class="">
                                    <img src="{{ asset('images/Perfiles/pexels-daniel-xavier-1239291.jpg')}}" class="card-img-top shadow " alt="..." style="border-radius: 10px; ">
                                    <div class="mt-3">
                                        <h5 class="card-title "  style="font-size:1.7vw;" >{{ atributo.nombre }}</h5>
                                        <p class="card-text " style="font-size:1.2vw;">Text</p>
                                    </div>
                                </article>
                            {% endfor %}
                        {% else %}
                            <div>No hay usuarios disponibles</div>
                        {% endif %}
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="container gridUsers p-4 align-items-center justify-content-center bg-white " style="border-radius: 10px; " >
                        {% if users|length > 0 %}
                            {% for atributo1 in atributos|slice(0, 6) %}
                                <article class="">
                                    <img src="{{ asset('images/Perfiles/pexels-ekaterina-belinskaya-4923041.jpg')}}" class="card-img-top shadow " alt="..." style="border-radius: 10px; ">
                                    <div class="mt-3">
                                        <h5 class="card-title "  style="font-size:1.7vw;" >{{ atributo1.nombre }}</h5>
                                        <p class="card-text " style="font-size:1.2vw;">Text</p>
                                    </div>
                                </article>
                            {% endfor %}
                        {% else %}
                            <div>No hay usuarios disponibles</div>
                        {% endif %}
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="container gridUsers p-4 align-items-center justify-content-center bg-white " style="border-radius: 10px; " >
                        {% if users|length > 0 %}
                            {% for atributo2 in atributos|slice(0, 6) %}
                                <article class="">
                                    <img src="{{ asset('images/Perfiles/pexels-olya-prutskova-7121391.jpg')}}" class="card-img-top shadow " alt="..." style="border-radius: 10px; ">
                                    <div class="mt-3">
                                        <h5 class="card-title "  style="font-size:1.7vw;" >{{ atributo2.nombre }}</h5>
                                        <p class="card-text " style="font-size:1.2vw;">Text</p>
                                    </div>
                                </article>
                            {% endfor %}
                        {% else %}
                            <div>No hay usuarios disponibles</div>
                        {% endif %}
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade"
                    data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade"
                    data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

    <style>
        .gridUsers{
            display: grid;
            /*gap: 0.8em;*/
            column-gap: 5vw;
            grid-template-columns: 20% 20% 20%;

        }

    </style>


{% endblock %}
