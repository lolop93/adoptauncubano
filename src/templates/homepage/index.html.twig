{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}



{% block body %}
    {{ parent() }}
    {{  dump() }}
    <div class="">
        <div class="card" style="border: none;">
            <img src="{{ asset('images/imagenes_random/bannerCoche.PNG') }}">
        </div>
    </div>

    <div class=" mt-5">
        <div id="carouselExampleFade" class="carousel slide carousel-fade " data-bs-ride="carousel">
            <div class="carousel-inner mx-auto" style="width: 80%">
                <div class="carousel-item active">
                    <div class=" gridUsers p-4 align-items-center justify-content-center bg-white mx-auto" style="border-radius: 10px; padding: 3rem !important; " >
                        {% if users|length > 0 %}
                            {% for user in users|slice(0, 6) %}
                                <div class="">
                                    <div class="imagenUser mx-auto " style="background-image: url({{ asset('images/Perfiles/' ~ user.galeria.getFotoPerfil) }});"></div>
                                    <div class="mt-2 mb-1 ">
                                        <div class="col-lg-7 col-12">
                                            <h5 class=" text-start " >{{ user.atributos.nombre }}</h5>
                                            <p class=" card-text text-start" >Nacionalidad</p>
                                            <p class="card-text text-start " >Edad</p>
                                        </div>
                                        <div class="col-lg-5 col-12 text-end">
                                            <i class="bi bi-heart-fill" ></i>
                                            <i class="bi bi-chat-left-fill" ></i>
                                        </div>

                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            <div>No hay usuarios disponibles</div>
                        {% endif %}
                    </div>
                </div>
                <div class="carousel-item">
                    <div class=" gridUsers p-4 align-items-center justify-content-center bg-white " style="border-radius: 10px; padding: 3rem !important; " >
                        {% if users|length > 0 %}
                            {% for atributo1 in atributos|slice(0, 6) %}
                                <div class=" ">
                                    <div class="imagenUser mx-auto" style="background-image: url({{ asset('images/Perfiles/pexels-edu-carvalho-2050994.jpg') }});" ></div>
                                    <div class="mt-2 mb-1 ">
                                        <div class="col-lg-7 col-12">
                                            <h5 class="  text-start" >{{ atributo1.nombre }}</h5>
                                            <p class="card-text text-start" >Nacionalidad</p>
                                            <p class="card-text text-start" >Edad</p>
                                        </div>
                                        <div class="col-lg-5 col-12 text-end">
                                            <i class="bi bi-heart-fill" ></i>
                                            <i class="bi bi-chat-left-fill" ></i>
                                        </div>

                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            <div>No hay usuarios disponibles</div>
                        {% endif %}
                    </div>
                </div>
                <div class="carousel-item">
                    <div class=" gridUsers p-4 align-items-center justify-content-center bg-white " style="border-radius: 10px; padding: 3rem !important; " >
                        {% if users|length > 0 %}
                            {% for atributo2 in atributos|slice(0, 6) %}
                                <div class=" ">
                                    <div class="imagenUser mx-auto" style="background-image: url({{ asset('images/Perfiles/pexels-daniel-xavier-1239291.jpg') }});" ></div>
                                    <div class="mt-2 mb-1 ">
                                        <div class="col-lg-7 col-12">
                                            <h5 class=" text-start" >{{ atributo2.nombre }}</h5>
                                            <p class="card-text text-start" >Nacionalidad</p>
                                            <p class="card-text text-start" >Edad</p>
                                        </div>
                                        <div class="col-lg-5 col-12 text-end">
                                            <i class="bi bi-heart-fill" ></i>
                                            <i class="bi bi-chat-left-fill" ></i>
                                        </div>

                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            <div>No hay usuarios disponibles</div>
                        {% endif %}
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade"
                    data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade"
                    data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>


    <div class=" mt-5 bg-white  rounded pt-4 pb-4 " >
        <div class=" mb-2 ">
            <div class="col-lg-6 col-12 selectores  d-flex align-items-center ">
                <div class="col-2 d-flex justify-content-center ">
                    <p class="mt-3">Edad</p>
                </div>
                <div class="col-10 mt-2 justify-content-center">
                <span class="multi-range ">
                    <input type="range" min="0" max="50" value="5" id="lower">
                    <input type="range" min="0" max="50" value="45" id="upper">
                </span>
                </div>
            </div>
            <div class="col-lg-6 col-12 mb-2 mb-lg-0 filaNacionalidad d-flex align-items-center">
                <div class="col-4 d-flex justify-content-center ">
                    <p class="">Nacionalidad</p>
                </div>
                <div class="col-8  justify-content-center">
                    <select class="form-select form-select-sm w-75" aria-label=".form-select-sm example">
                        <option selected>Seleccione...</option>
                        <option value="1">Argentino</option>
                        <option value="2">Cubano</option>
                        <option value="3">Ejpaniol</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="">
            <div class="gridBusquedaRapida ">
                {% if users|length > 0 %}
                    {% for user in users|slice(0, 5) %}
                        <div class=" ">
                            <div class="imagenUser mx-auto" style="background-image: url({{ asset('images/Perfiles/' ~ user.galeria.getFotoPerfil) }});"></div>
                            <div class="mt-2 mb-1 ms-1 me-1 ">
                                <div class="col-lg-7 col-12">
                                    <h5 class=" text-start">{{ user.atributos.nombre }}</h5>
                                    <p class="card-text text-start">Nacionalidad</p>
                                    <p class="card-text text-start">Edad</p>
                                </div>
                                <div class="col-lg-5 col-12 text-end">
                                    <i class="bi bi-heart-fill"></i>
                                    <i class="bi bi-chat-left-fill"></i>
                                </div>

                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div>No hay usuarios disponibles</div>
                {% endif %}
            </div>
        </div>

    </div>

    <div class="">
        <div class="gridConsultas mt-5 bg-white p-4 rounded">
            {% if users|length > 0 %}
                {% for userConsultas in users|slice(0, 3) %}
                    <div class="imagenUser mx-auto  " style="background-image: url({{ asset('images/Perfiles/' ~ userConsultas.galeria.getFotoPerfil) }});"></div>
                {% endfor %}
                {% for userConsultas in users|slice(0, 3) %}
                    <h5 class=" text-start ">{{ userConsultas.atributos.nombre }}</h5>
                {% endfor %}
                {% for userConsultas in users|slice(0, 3) %}
                    <p class="card-text text-start">Nacionalidad</p>
                {% endfor %}
                {% for userConsultas in users|slice(0, 3) %}
                    <p class="card-text text-start">Edad</p>
                {% endfor %}
                <button class="botonConsultas">Ver mas</button>

            {% else %}
                <div>No hay usuarios disponibles</div>
            {% endif %}
        </div>
    </div>

    <style>
        .gridUsers{
            display: grid;
            /*gap: 0.8em;*/
            /*column-gap: 3vw;*/
            grid-template-columns: 33% 33% 33%;
        }
        .imagenUser {
            width: 12vw;
            height: 12vw;

            background-size: cover;
            background-position: center 15%;
            background-repeat: no-repeat;
            border-radius: 10px;
            box-shadow: 10px 22px 23px rgb(0 0 0 / 15%);

        }
        .gridUsers p{
            font-size: 1vw;
            margin-bottom: 0;
        }
        .gridUsers h5{
            font-size: 1.2vw;
            margin-bottom: 0;
        }
        .gridUsers i{
            font-size: 1.4vw;
        }
        .container-fluid{
            width: auto;

        }
        .bi-heart-fill{
            color: #E86362;
        }
        .bi-chat-left-fill{
            color: #5875AF;
        }
        .filaNacionalidad p{
            margin: 0;
            font-size: 12px

        }
        .selectores{
            font-size: 12px;

        }
        .gridBusquedaRapida{
            display: grid;
            grid-template-columns: repeat(5,0.8fr);
            grid-auto-rows: minmax(100px,auto);
            justify-content: center;
        }

        .gridBusquedaRapida p{
            font-size: 1vw;
            margin-bottom: 0;
        }
        .gridBusquedaRapida h5{
            font-size: 1.2vw;
            margin-bottom: 0;
        }
        .gridBusquedaRapida i{
            font-size: 1.4vw;
        }

        .gridConsultas{
            display: grid;
            grid-template-columns: repeat(3,1fr);
            grid-auto-rows: minmax(100px, max-content);
            justify-items: start;
        }

        .botonConsultas{
            grid-column: 1/4;
            justify-self: end;
        }

        .gridConsultas p, .gridConsultas h5{
            margin-left: 1em;
            font-size: 1.2vw;
        }

        .gridConsultas .imagenUser{
            margin-bottom: 10px;
        }


    </style>


{% endblock %}
