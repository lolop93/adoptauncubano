{% extends 'baseMobile.html.twig' %}
{% block title %}Inicio - Adopta un Cubano{% endblock %}
{% block body %}




<div class="cuerpo">
    <div id="carouselExampleSlidesOnly" class="carousel slide carousel" data-bs-ride="carousel" data-bs-touch="true" data-bs-interval="false" style=" justify-items: center;" >
        <div class="carousel-inner">

            {% if users|length > 0 %}
               {% for user in users|slice(0,99) %}
                    <div class="carousel-item {{ loop.first ? 'active' : '' }}">
                        <div class="pplCard ">

                            <div class="">

                                <div class="fotoPerfil" style="background-image:  url({{  user.galeria ? asset('images/Perfiles/' ~ user.galeria.getFotoPerfil) : asset('images/fotodefecto.png') }}); background-size: cover; background-position: center">
                                    <a href="{{ path('perfiles',{id:user.id}) }}"><div class="ojo"></div></a>
                                    <div class="infoCard">
                                        <h1>{{ user.nombre ? user.nombre : 'noname' }} </h1>
                                    </div>
                                </div>

                                <div class="base" style="display: flex; align-items: center; justify-content: center    ">
                                   <i class="big bi bi-heart-fill {{   user.id in likesTotales ? 'matchOk' : 'matchKo' }}" data-id-match="{{ user.id }}" ></i>

                                </div>
                            </div>

                        </div>
                    </div>
               {% endfor %}
            {% else %}
                <div>No hay usuarios disponibles</div>
            {% endif %}
        </div>
    </div>
</div>

    <style>
        .ojo{
            position: absolute;
            top: 25px;
            right: 25px;
            width: 61px;
            height: 60px;
            background-image: url("{{ asset('images/css_sprites.png') }}");
            background-size: cover;
            animation-name: sprite;
            animation-duration: 0.6s;
            animation-timing-function: steps(5);
            animation-iteration-count: infinite;
        }

        @keyframes sprite{
            100%{
                background-position: -3750px;
            }
        }

        .matchOk{
            color: #E86362;
        }

        .matchKo{
            color: #858585;
        }

        .cuerpo{
            padding: 25px 0;
        }
        .carousel-card{
            width: 300px;
            height: 600px;

        }
        .pplCard{
            position: relative;
            display: block;
            background-color: whitesmoke;
            border-radius: 15px;
        }
        .bi-eye-fill{
            position: absolute;
            top: 25px;
            right: 25px;
            color: white;
            font-size: 32px;
        }

        .active{
            display: flex !important;
            justify-content: center;
        }
        .infoCard{
            background-color: rgba(0, 0, 0, 0.35);
            padding: 10px;
            width: 100%;
            position: absolute;
            bottom: 0px;


        }
        .infoCard h1{
            font-size: 42px;
            color: white;
            margin-bottom: 0;
        }
         .fotoPerfil{
            width: 300px;
            height: 500px;
            position: relative;
        }
        .base{
            display: flex;
            width: 100%;
            justify-content: space-between;
            height: 90px;
            align-items: center;
            padding: 0 35px;
            border-radius:0px 0px 50px 50px;
        }
        .likeContainer{
            background-color: #CE5353;
            width: 50%;
            height: 100%;
            margin: -10px 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .base .big{
            font-size: 42px;
        }
        .base .small{
            font-size: 26px;
            color: #CE5353;
        }
        .base .bi-eye-fill{
            font-size: 30px;
            color: #CE5353;
        }
        .carousel-item-start, .carousel-item-end{
            width: 75% !important;

        }
        .carousel-item-next, .carousel-item-end{
            margin: 0 50px;

        }
        .active, .carousel-item-end{
            display: none;

        }
    </style>
{% endblock %}

